@using Microsoft.AspNetCore.Http;
@using VicPortalRH.Services

@inject Microsoft.AspNetCore.Hosting.IHostingEnvironment henv
@inject VersionService Version

@{
    ViewData["Title"] = "Desbloqueio de Usuários";
}

@if (@Context.Session.GetString("AdminRH") == "False")
{
    @await Html.PartialAsync("_AcessoNegado")
}
else
{
    @if (henv.EnvironmentName == "Development")
    {
        <script src="~/Scripts/Views/Desbloqueio.js?"></script>
    }
    else
    {
        <script src="~/Bundle/js/Desbloqueio.min.js?@Version.GetVersion()"></script>
    }

    <section class="content">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title SemiBold">Desbloqueio de Usuários</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div id="grdUsuariosBloqueados"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

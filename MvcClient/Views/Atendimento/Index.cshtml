@using VicPortalRH.Services

@inject Microsoft.AspNetCore.Hosting.IHostingEnvironment henv
@inject VersionService Statics

@{
    ViewData["Title"] = "Controle de Atendimento";
}

@if (henv.EnvironmentName == "Development")
{
    <script src="~/Scripts/Views/Atendimento.js?"></script>
}
else
{
    <script src="~/Bundle/js/Atendimento.min.js?@Statics.GetVersion()"></script>
}

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Controle de Atendimento</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">Filtros</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                        title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="col-md-2">
                                <label>Filial</label>
                                <div id="slbFilial"></div>
                            </div>
                            <div class="col-md-3">
                                <label>Procedimento</label>
                                <div id="slbProcedimento"></div>
                            </div>
                            <div class="col-md-3">
                                <div id="btnLimpar" style="margin-top: 24px;"></div>
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">Relação de Pessoal</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                        title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="row form-group">
                                <div id="grdRelacaoPessoal" class="form-group"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">Agenda de Atendimento</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                        title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <div id="grdAgendaAtendimento" class="form-group"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</section>

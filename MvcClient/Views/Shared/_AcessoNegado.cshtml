@{
    ViewData["Title"] = "Acesso Negado";
}

<style type="text/css">
    .no-access {
        display: flex;
        justify-content: space-between;
        padding: 60px 80px;
    }

        .no-access div {
            display: flex;
            flex-direction: column;
            justify-content: center;
            margin-right: 3em;
        }

            .no-access div strong {
                font-size: 42px;
            }

            .no-access div span {
                font-size: 20px;
                color: #333333BF;
            }

    @@media (max-width: 1020px) {
        .no-access {
            padding: 30px;
            flex-direction: column;
            align-items: center;
        }

            .no-access div {
                align-items: center;
                text-align: center;
                margin-bottom: 3em;
                margin-right: 0;
            }

            .no-access img {
                height: auto;
                width: 40%;
            }
    }

    @@media (max-width: 560px) {
        .no-access div strong {
            font-size: 32px;
        }

        .no-access div span {
            font-size: 16px;
        }

        .no-access img {
            height: auto;
            width: 60%;
        }
    }
</style>

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-widget">
                <div class="no-access">
                    <div>
                        <strong>
                            Acesso Negado!
                        </strong>
                        <span>
                            Você não tem permissão para registrar o Ponto via web, por favor entre em contato com o seu gestor.
                        </span>
                    </div>
                    <img src="~/Images/acesso_negado.svg" height="500" />
                </div>
            </div>
        </div>
    </div>
</section>
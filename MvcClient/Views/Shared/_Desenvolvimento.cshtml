@{
    ViewData["Title"] = "Em Desenvolvimento";
}

<style type="text/css">
    .building {
        display: flex;
        justify-content: space-between;
        padding: 60px 80px;
    }

        .building div {
            display: flex;
            flex-direction: column;
            justify-content: center;
            margin-right: 3em;
        }

            .building div strong {
                font-size: 42px;
            }

            .building div span {
                font-size: 20px;
                color: #333333BF;
            }

    @@media (max-width: 1020px) {
        .building {
            padding: 30px;
            flex-direction: column;
            align-items: center;
        }

            .building div {
                align-items: center;
                text-align: center;
                margin-bottom: 3em;
                margin-right: 0;
            }

            .building img {
                height: auto;
                width: 40%;
            }
    }

    @@media (max-width: 560px) {
        .building div strong {
            font-size: 32px;
        }

        .building div span {
            font-size: 16px;
        }

        .building img {
            height: auto;
            width: 60%;
        }
    }
</style>

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-widget">
                <div class="building">
                    <div>
                        <strong>
                            Em desenvolvimento!
                        </strong>
                        <span>
                            Funcionalidade em Desenvolvimento, logo mais será liberada para consulta.
                        </span>
                    </div>
                    <img src="~/Images/desenvolvimento.svg" height="400" />
                </div>
            </div>
        </div>
    </div>
</section>